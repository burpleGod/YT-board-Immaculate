{
  "name": "harold-grayblood",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "electron:dev": "VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "electron:build": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "@fontsource/cinzel": "^5.2.8",
    "@fontsource/cinzel-decorative": "^5.2.8",
    "@fontsource/crimson-text": "^5.2.7",
    "@fontsource/eb-garamond": "^5.2.7",
    "@fontsource/kalam": "^5.2.8",
    "electron-updater": "^6.8.3",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "electron": "^37.10.3",
    "electron-builder": "^26.8.1",
    "jsdom": "^25.0.0",
    "vite": "^5.4.0",
    "vitest": "^2.1.0"
  },
  "build": {
    "appId": "com.haroldgrayblood.app",
    "productName": "Harold Grayblood",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "burpleGod",
      "repo": "YT-board-Immaculate"
    }
  }
}
